<h1>Listing weapons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Damage</th>
    <th>Bullets per shot</th>
    <th>Accuracy</th>
    <th>Fire rate</th>
    <th>Reload speed</th>
    <th>Magazine</th>
    <th>Rounds per shot</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @weapons.each do |weapon| %>
  <tr>
    <td><%= weapon.name %></td>
    <td><%= weapon.damage %></td>
    <td><%= weapon.bullets_per_shot %></td>
    <td><%= weapon.accuracy %></td>
    <td><%= weapon.fire_rate %></td>
    <td><%= weapon.reload_speed %></td>
    <td><%= weapon.magazine %></td>
    <td><%= weapon.rounds_per_shot %></td>
    <td><%= link_to 'Show', weapon %></td>
    <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
    <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

